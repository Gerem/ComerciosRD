<?xml version="1.0" encoding="UTF-8"?>
<project name="module_comerciosrd" default="compile.module.comerciosrd">
  <dirname property="module.comerciosrd.basedir" file="${ant.file.module_comerciosrd}"/>
  
  <property name="module.jdk.home.comerciosrd" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.comerciosrd" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.comerciosrd" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.comerciosrd" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="comerciosrd.output.dir" value="${module.comerciosrd.basedir}/out/production/ComerciosRD"/>
  <property name="comerciosrd.testoutput.dir" value="${module.comerciosrd.basedir}/out/test/ComerciosRD"/>
  
  <path id="comerciosrd.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="comerciosrd.module.production.classpath">
    <path refid="${module.jdk.classpath.comerciosrd}"/>
    <path refid="library.android-support-v4.classpath"/>
  </path>
  
  <path id="comerciosrd.runtime.production.module.classpath">
    <pathelement location="${comerciosrd.output.dir}"/>
    <path refid="library.android-support-v4.classpath"/>
  </path>
  
  <path id="comerciosrd.module.classpath">
    <path refid="${module.jdk.classpath.comerciosrd}"/>
    <pathelement location="${comerciosrd.output.dir}"/>
    <path refid="library.android-support-v4.classpath"/>
  </path>
  
  <path id="comerciosrd.runtime.module.classpath">
    <pathelement location="${comerciosrd.testoutput.dir}"/>
    <pathelement location="${comerciosrd.output.dir}"/>
    <path refid="library.android-support-v4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.comerciosrd">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.comerciosrd">
    <patternset refid="excluded.from.module.comerciosrd"/>
  </patternset>
  
  <path id="comerciosrd.module.sourcepath">
    <dirset dir="${module.comerciosrd.basedir}">
      <include name="gen"/>
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.comerciosrd" depends="compile.module.comerciosrd.production,compile.module.comerciosrd.tests" description="Compile module ComerciosRD"/>
  
  <target name="compile.module.comerciosrd.production" depends="register.custom.compilers" description="Compile module ComerciosRD; production classes">
    <mkdir dir="${comerciosrd.output.dir}"/>
    <javac2 destdir="${comerciosrd.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.comerciosrd}/javac">
      <compilerarg line="${compiler.args.comerciosrd}"/>
      <bootclasspath refid="comerciosrd.module.bootclasspath"/>
      <classpath refid="comerciosrd.module.production.classpath"/>
      <src refid="comerciosrd.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.comerciosrd"/>
    </javac2>
    
    <copy todir="${comerciosrd.output.dir}">
      <fileset dir="${module.comerciosrd.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.comerciosrd.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.comerciosrd.tests" depends="register.custom.compilers,compile.module.comerciosrd.production" description="compile module ComerciosRD; test classes" unless="skip.tests"/>
  
  <target name="clean.module.comerciosrd" description="cleanup module">
    <delete dir="${comerciosrd.output.dir}"/>
    <delete dir="${comerciosrd.testoutput.dir}"/>
  </target>
</project>